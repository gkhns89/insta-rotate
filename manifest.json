{
  "manifest_version": 3,
  "name": "Instagram Video Rotator",
  "version": "3.2.0",
  "author": "G.Codes",
  "description": "Instagram masaüstü versiyonunda yatay videoları izlemeyi kolaylaştırır.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://www.instagram.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}